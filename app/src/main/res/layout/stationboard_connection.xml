<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/connectionDeparture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        />

    <TextView android:id="@+id/connectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/connectionDeparture"
        android:layout_toEndOf="@id/connectionDeparture"
        android:layout_marginRight="6dip"
        />

    <TextView android:id="@+id/connectionDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/connectionName"
        android:layout_toEndOf="@id/connectionName"
        />

</RelativeLayout>